<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kantczak.imagedrawproject.MainScreenActivity">

    <kantczak.imagelabelsproject.myDrawView.MyDrawView
        android:id="@+id/mainImageView"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:layout_above="@+id/tableLayout" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tableLayout">
        <TableRow
            android:paddingTop="10dp">
            <FrameLayout
                android:paddingLeft="10dp">
            <ImageButton
                android:id="@+id/dropBoxButton"
                style="?android:attr/buttonStyleSmall"
                android:background="@drawable/dropbox"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />
            </FrameLayout>
            <FrameLayout>
            <ImageButton
                android:id="@+id/tagsButton"
                style="?android:attr/buttonStyleSmall"
                android:background="@drawable/tag"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            </FrameLayout>
            <FrameLayout>
            <ImageButton
                android:id="@+id/grabcutButton"
                style="?android:attr/buttonStyleSmall"
                android:background="@drawable/nozyczki"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            </FrameLayout>
            <FrameLayout
                android:paddingRight="10dp">
            <ImageButton
                android:id="@+id/drawButton"
                style="?android:attr/buttonStyleSmall"
                android:background="@drawable/start_pencil_icon"
                android:text="DROPBOX"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            </FrameLayout>
        </TableRow>
    </TableLayout>
</RelativeLayout>
