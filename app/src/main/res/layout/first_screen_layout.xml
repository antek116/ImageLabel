<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/firstScreenLayoutId"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newPhotoFrameLayout"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newPhotoButton"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal|bottom"
                android:text="New Photo" />

            <ImageButton
                android:id="@+id/newPhotoButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="131dp"
                android:background="@drawable/camera_icon"
                android:text="@string/newPhotoButtonENG" />

            <ImageButton
                android:id="@+id/galleryButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/gallery"
                android:text="@string/galleryButtonENG"
                android:paddingBottom="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:paddingTop="10dp"
                android:text="Gallery"
                android:layout_below="@+id/galleryButton"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>










